<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <system.webServer>
        <handlers>
            <remove name="httpplatformhandler" />
            <add name="httpplatformhandler"
                 path="*"
                 verb="*"
                 modules="httpPlatformHandler"
                 resourceType="Unspecified" />
        </handlers>
        <httpPlatform processPath="PATH_TO\run.bat"
                      arguments=""
                      stdoutLogEnabled="true"
                      stdoutLogFile="PATH_TO\logs\floodband.log"
                      startupTimeLimit="20"
                      requestTimeout="00:05:00"
                      processesPerApplication="1">
        </httpPlatform>
        <rewrite>
            <rules>
                <rule name="Canonical Hostname">
                    <match url="(.*)" />
                    <conditions logicalGrouping="MatchAny">
                        <add input="{HTTP_HOST}" pattern="^floodband\.uk$" negate="true" />
			            <add input="{HTTPS}" pattern="^OFF$" />
                    </conditions>
                    <action type="Redirect" url="https://floodband.uk/{R:1}" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>
